<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Illustration -->
        <ImageView
            android:id="@+id/iv_profile_illustration"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/icons8_dumbell_100"
            android:contentDescription="Illustration"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's complete your profile"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_profile_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It will help us to know more about you!"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="24dp" />

        <!-- Gender Dropdown -->
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_field"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minHeight="48dp"
            android:padding="16dp"
            />

        <!-- Date of Birth -->
        <TextView
            android:id="@+id/et_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:inputType="date"
            android:background="@drawable/rounded_field"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Weight"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KG"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Your Height"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/tv_height_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CM"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/nxt_btn_page_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
