<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/toolbar_background">


    <!-- Welcome Text -->

    <!-- Exercise Bar -->

    <!-- Start Workout Text -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome back, Ethan!"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/exercise_bar"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/circular_background"
        android:contentDescription="exercise using a bar"
        android:elevation="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/exercise_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Start your workout!"
        app:layout_constraintBottom_toTopOf="@+id/exercise_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998" />

    <!-- Streak Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="1dp"
        android:id="@+id/constraintLayout"
        android:layout_width="360dp"
        android:layout_height="152dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07">

        <View

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_light_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="91dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Your FITTR Streak"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_marginStart="224dp"
            android:fontFamily="@font/poppins_bold"
            android:text="42"
            android:textColor="@android:color/white"
            android:textSize="89sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="288dp"
            android:fontFamily="@font/poppins_medium"
            android:text="days"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.868" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Left Card -->
    <FrameLayout
        android:elevation="1dp"
        android:layout_width="170dp"
        android:layout_height="149dp"
        android:background="@drawable/rounded_white_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415">

        <!-- TextView positioned at the top-center -->
        <TextView
            android:id="@+id/gradient_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Calories Burnt"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </FrameLayout>


    <!-- Right Card -->
    <FrameLayout
        android:elevation="1dp"
        android:layout_width="170dp"
        android:layout_height="149dp"
        android:background="@drawable/rounded_white_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Goals"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_bold" />
    </FrameLayout>

    <!-- Bottom Card -->
    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="155dp"
        android:background="@drawable/rounded_white_view"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Your Progress"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
